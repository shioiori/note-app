<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layoutRecord"
    android:orientation="horizontal"
    android:layout_width="@dimen/_150sdp"
    android:layout_height="@dimen/_25sdp"
    android:gravity="center_vertical"
    android:background="@drawable/background_record"
    android:visibility="gone">

        <ImageView
            android:id="@+id/imageRecord"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginRight="@dimen/_40sdp"
            android:layout_marginLeft="@dimen/_8sdp"
            android:orientation="horizontal"
            android:src="@drawable/img_audio_visualizer"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:tint="@color/colorPrimary"/>

        <ImageView
            android:id="@+id/imagePlayRecord"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_done"
            app:tint="@color/colorIcons"
            app:layout_constraintLeft_toRightOf="@id/imageRecord"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageView
            android:id="@+id/imageRemoveRecord"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/ic_close"
            app:tint="@color/colorIcons"
            app:layout_constraintLeft_toRightOf="@id/imagePlayRecord"
            app:layout_constraintTop_toTopOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>